    body
        if headerMenu
            header
                #header.default
                    .container#header
                        .row.align-items-center.justify-content-between
                            .col-2.logo
                                a(href='/')
                                    img(src=`/img/${headerMenu.logo}`, alt="JsDaddy")
                            .nav-wrapper.col-lg-10
                                nav
                                    ul#menu-wrap
                                        li
                                            a(href='/#services' class="link-nav") #{headerMenu.nav.serv}
                                        li
                                            a(href='/#dev-process' class="link-nav") #{headerMenu.nav.dev_process}
                                        li
                                            a(href="/#technologies" class="link-nav") #{headerMenu.nav.tech}
                                        li
                                            a(href="/#testimonials" class="link-nav") #{headerMenu.nav.testimonials}
                                        li
                                            a(href="about-us" class="link-nav") #{headerMenu.nav.about}
                                .btn-wrap
                                    a(href="#popup-form" class="btn contact_us_btn") #{headerMenu.btn}
                            .nav-burger
                                .line
                                .line-middle
                                .line
        block content
        if footerNew
            footer
                .container#footer
                    .row
                        .footer-wrapper
                            .contacts
                                .contacts__logo
                                    a(href="#")
                                        img(src="/img/" + footerNew.content.contacts.logo, alt="JsDaddy") 
                                .contacts__email 
                                    a(href="mailto:info@jsdaddy.io") 
                                        i(class="fa fa-envelope-o", aria-hidden="true") 
                                        |#{footerNew.content.contacts.info.mail}
                                .contacts__skype 
                                    a(href="skype:juncker8888") 
                                        i(class="fa fa-skype" aria-hidden="true")
                                        |#{footerNew.content.contacts.info.skype}     
                                .contacts__addres #{footerNew.content.contacts.location}
                            .navigation-footer
                                ul
                                    li
                                        a(href="/#services") #{footerNew.navigation.serv}
                                    li
                                        a(href="/#dev-process") #{footerNew.navigation.DevProc}
                                    li
                                        a(href="/#technologies") #{footerNew.navigation.techno}
                                    li
                                        a(href="/#testimonials") #{footerNew.navigation.testimonial}
                                    li 
                                        a(href="about-us") #{footerNew.navigation.about} 
                            .social #{footerNew.social.text}
                                ul
                                    each item in  footerNew.social.social
                                        li 
                                            a(href=item.link, class=item['linkClass'])
                                                i.fa(class=item['iconClass'])                                                         
                .copy-wrapper
                    .container
                        .row
                            .col-lg-12 #{footerNew.footer.text}

        block script
            script(src='/js/main.min.js')
            script(src='/js/common.min.js')
            

