    body
        header#home
            .container
                .row.content-header-wrapper
                    .logo
                        a(href='/')
                            img(src='/img/logo.png', alt='js daddy')
                    .navigation-wrapper
                        if mainMenu.content.languages
                            .lang-checker
                                ul.select
                                    each lang in mainMenu.content.languages
                                        li(class=lang.active)
                                            a(href=lang.link) #{lang.title}
                        nav.nav-main
                            ul#main-menu
                                li
                                    a(href='') item 1
                                li
                                    a(href='') item 2
                                li.sub-menu
                                    a(href='') Company
                                        i(class='fa fa-angle-down')
                                    ul.sub-nav
                                        li
                                            a(href='#') sub item
                                        li
                                            a(href='#') sub item
                                        li
                                            a(href='#') sub item
                                li
                                    a(href='') item 4
                                li
                                    a(href='') item 5

                        .right-header-block
                            if mainMenu.content.social
                                .social
                                    ul
                                        each item in mainMenu.content.social
                                            li
                                                a(class=item['link-class'], href=item.link)
                                                    i.fa(class=item['icon-class'])
                            if mainMenu.content.phone
                                .tel-wrapper
                                    each i in mainMenu.content.phone
                                        a(href=i.link) #{i.phone}
                            .contact-btn-wrapper
                                a.contact-btn.scroll(href=mainMenu.content.button.link) #{mainMenu.content.button.text}
                    .nav-burger
                        .line
                        .text Menu
                        .line

block content
    section.banner#banner
        .container
            .banner-content-wrapper
                .banner-content
                    h1 #{mainBanner.content.text.title}
                    p #{mainBanner.content.text.subtitle}
                    a.contact-btn(href=mainBanner.content.button.link) #{mainBanner.content.button.text}
    section#opensource.opensource
        .container
            .header-section-wrapper
                h3 #{opensource.title}
                .background-section-text #{opensource.bgtext}
            each package in opensource.content
                .row
                    .col-md-8
                        .img-block
                            img(src='/img/' + package.src, alt=package.alt)
                    .col-md-4
                        .text-block
                            p #{package.description}
                            .contact-btn-wrapper
                                a.contact-btn(href=package.link) View on GitHub
                                    i.fa.fa-github
    section#events.events
        .container
            .header-section-wrapper
                h3 #{events.title}
                .background-section-text #{events.bgtitle}
            each el in events.content
                .sl-events
                    each item in el.event
                        .event-item
                            .event
                                .event-img(style=`background-image: url("/img/${item.src}" )`)
                                    span.label #{item.label}
                                .event-title #{item.title}
                                .event-desc #{item.description}
    section#contacts.contacts
        .container
            .header-section-wrapper
                h3 #{contacts.title}
                .background-section-text #{contacts.title}
            .row
                .contact-form-wrapper
                    contacts-form.contact_us(
                    btnText=contacts.content.button.text
                    schema
                    showphone="false"
                    )
            .row
                .contact-details
                    .email-block
                        ul
                            li.email
                                a(href='mailto:' + contacts.content.contacts.email) #{contacts.content.contacts.email}
                        .social
                            ul
                                each el in contacts.content.contacts.social
                                    li
                                        a(class=el.linkClass, href=el.link)
                                            i(class='fa ' + el.iconClass)
                    .tel-block
                        ul
                            li.tel
                                p #{contacts.content.contacts.skype}
                    .address-block
                        ul
                            li #{contacts.content.contacts.address}