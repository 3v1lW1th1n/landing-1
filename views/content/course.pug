extends ../layout

block content
    section.banner-course
        .container
            .banner-content-wrapper
                .banner-content
                    .img-banner-wrapper
                        img(src='/img/' + banner.content.icon)
                    .banner-text
                        h1 #{banner.content.info.title}
                        p #{banner.content.info.shortDescription}
                        .date-wrapper
                            p.start #{banner.content.info.start}
                            p.schedule #{banner.content.info.duration}
                            p.mentor #{banner.content.info.firstName} #{banner.content.info.lastName}
                            p.prices #{banner.content.info.price}
                            a.contact-btn(href=banner.content.button.link) #{banner.content.button.text}
    section#about.about-course
        .container
            .header-section-wrapper
                h3 #{description.title}
                div.background-section-text #{description.title}
            .row
                .col-lg-5
                    .about-course-img
                        img(src='/img/' + description.content.icon)
                .col-lg-7
                    each text in description.content
                        p #{text}
    section.course-program-wrapper
        .container
            .header-section-wrapper
                h3 #{program.title}
                div.background-section-text #{program.title}
            .program-wrap
                .row
                    each module in program.content
                        .col-lg-4
                            ul
                                li.program-title #{module.title}
                                    each item in module.items
                                        li #{item}
    section.advantages
        .container
            .header-section-wrapper
                h3 #{advantagesCourses.title}
                .background-section-text #{advantagesCourses.title}
            .items-wrapper.row
                each item in advantagesCourses.content.item
                    .col-lg-2.col-md-6
                        .item
                            .ico-wrap
                                img(src='/img/' + item.icon)
                            p #{item.text}
    section#contacts.contacts
        .container
            .header-section-wrapper
                h3 #{contactsCourses.title}
                .background-section-text #{contactsCourses.title}
            .row
                .contact-form-wrapper
                    .contact-form-wrapper
                        contacts-form.apply_course(
                            btnText=contactsCourses.content.button.text
                            courses=courses
                            schema
                            showphone="true"
                            selectedcourse=selectedCourse.name
                            lang=lang
                        )
            .row
                .contact-details
                    .email-block
                        ul
                            li.email
                                a(href='mailto' + contactsCourses.content.contacts.email) #{contactsCourses.content.contacts.email}
                        .social
                            ul
                                each soc in contactsCourses.content.contacts.social
                                    li
                                        a(class=soc.linkClass, href=soc.link)
                                            i.fa(class=soc.iconClass)
                    .tel-block
                        ul
                            li.tel
                                p Skype:
                                p #{contactsCourses.content.contacts.skype}
                    .address-block
                        ul
                            li #{contactsCourses.content.contacts.address}
