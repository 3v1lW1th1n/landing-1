extends ../layout

block content
    section.banner-second-about
        .container
            .row
                .banner-second__web
                    h1 #{aboutCompany.title}
                    p #{aboutCompany.head.description}
                    a(href="#popup-form" class="btn contact_us_btn") Contact Us
    section.about-us
        .container
            .row   
                .header-section-wrapper
                    .short-header #{aboutCompany.head.title}
                        h3 ABOUT US TEXT
                        .sub-header #{aboutCompany.main.subtitle}
            .row
                .col-md-6
                  .about-us__text.animate.wow.fadeInLeft.fast
                    p
                        b #{aboutCompany.main.descriptionBeginning}
                        | #{aboutCompany.main.description1}
                    p #{aboutCompany.main.description2}
                    p #{aboutCompany.main.description3}
                .col-md-6
                    .about-us__img.animate.wow.fadeInRight.fast
                        img(src='/img/about-office.jpg', alt='')
    section
      .container
        .row
          .header-section-wrapper
            h3 Team
            .background-section-text Team
            .sub-header #{aboutCompany.team.subtitle}
        .row
            each i in aboutCompany.team.content
                .team.col-md-4.col-lg-3
                    .item-wrapper.animate.wow.zoomIn.fast
                        .photo-wrapper
                            img(src='/img/' + i.photo, alt=i.alt)
                        .name #{i.name}
                        .position #{i.position}
                        .soc-link
                            a(href=i.soc-link)
                                i(class='fa fa-linkedin-square')
    #map

    form#popup-form.mfp-hide.white-popup-block.popup-form
        h3 Contact Us
        .popup-form__input-wrapper
            label(for="name") Name
            input#name(name="name", type="text")
            p.popup-form__input-wrapper_invalid-message#name_error This field can not be empty
        .popup-form__input-wrapper
            label(for="email") Email
            input#email(name="email", type="email")
            p.popup-form__input-wrapper_invalid-message#email_error This field must contain valid email
        .popup-form__input-wrapper
            label(for="Textarea") Message
            textarea#message
            p.popup-form__input-wrapper_invalid-message#textarea_error This field can not be empty
        .popup-form__btn-wrapper
            button.btn#form__submit Contact Us
        .success-message
            .success-message__icon
                i.fa.fa-check(aria-hidden="true")
            span Success!   
